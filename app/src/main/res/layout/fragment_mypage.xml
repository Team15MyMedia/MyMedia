<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".main.MainActivity">

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="match_parent"
        android:layout_height="177dp"
        android:layout_marginTop="60dp"
        android:gravity="center_vertical"
        android:src="@drawable/icon5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/edt_userprofile"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_marginTop="-170dp"
        android:text="User Profile"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:layout_marginTop="-70dp"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sit quam dui, vivamus bibendum ut. A morbi mi tortor ut felis non accumsan accumsan quis. Massa, id ut ipsum aliquam  enim non posuere pulvinar diam."
        android:textColor="#FFFFFF"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:lineSpacingExtra="4dp"
        android:textAlignment="textStart"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textIsSelectable="true"
        android:autoLink="web"
        android:linksClickable="true"
        android:background="?android:attr/selectableItemBackground"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <TextView
        android:id="@+id/edy_myfavoritevideos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="My Favorite Videos"
        android:textColor="#FFFFFF"
        android:layout_marginTop="360dp"
        android:layout_marginLeft="15dp"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/img_video"
        android:layout_width="335dp"
        android:layout_height="120dp"
        android:layout_marginTop="396dp"
        android:layout_marginRight="39dp"
        android:gravity="center_vertical"
        android:src="@drawable/movies"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_favoriteVideo1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Title: Lucifer Movie"
        android:textColor="#FFFFFF"
        android:layout_marginTop="519dp"
        android:layout_marginLeft="36dp"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/txt_favoriteVideo2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Title: Merry Men"
        android:textColor="#FFFFFF"
        android:layout_marginTop="519dp"
        android:layout_marginLeft="210dp"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/img_video2"
        android:layout_width="335dp"
        android:layout_height="120dp"
        android:layout_marginTop="539dp"
        android:layout_marginRight="39dp"
        android:gravity="center_vertical"
        android:src="@drawable/movies"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_home"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="693dp"
        android:layout_marginRight="350dp"
        android:gravity="center_vertical"
        android:src="@drawable/home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Home"
        android:textColor="#FFFFFF"
        android:layout_marginTop="716dp"
        android:layout_marginLeft="40dp"
        android:textSize="8sp" />

    <ImageView
        android:id="@+id/img_search"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="693dp"
        android:layout_marginRight="190dp"
        android:gravity="center_vertical"
        android:src="@drawable/search"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Search"
        android:textColor="#FFFFFF"
        android:layout_marginTop="716dp"
        android:layout_marginLeft="197dp"
        android:textSize="8sp" />

    <ImageView
        android:id="@+id/img_mypage"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="693dp"
        android:layout_marginRight="39dp"
        android:gravity="center_vertical"
        android:src="@drawable/mypage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_mypage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="My Page"
        android:textColor="#FFFFFF"
        android:layout_marginTop="716dp"
        android:layout_marginLeft="346dp"
        android:textSize="8sp" />

</androidx.constraintlayout.widget.ConstraintLayout>
